{
    "name": "dp-middleware",
    "version": "1.0.0",
    "description": "",
    "main": "dist/index",
    "typings": "dist/index",
    "scripts": {
        "setup": "npm run setEnv && npm run build && npm run newdb",
        "newdb": "npm run start -- --newdb",
        "setup-noenv": "npm run build && npm run start -- --newdb && npm run setUI",
        "setEnv": "if [ -e .env.staging ]; then cp .env.staging .env; fi",
        "setUI": "mkdir -p public && mkdir -p dist/public && cp -R ../client/dist/* public && cp -R public/* dist/public",
        "start": "node dist/app.js",
        "dev": "nodemon src/app.ts",
        "build": "tsc -p .",
        "bootstrap": "npm run start -- --bootstrap",
        "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'src/tests/**/*.ts'  --require src/app.ts"
    },
    "author": "Vishwas Anand Bhushan",
    "license": "MIT",
    "dependencies": {
        "aes-js": "^3.1.2",
        "cookie-parser": "^1.4.5",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "hs-ssi-sdk": "^5.0.1",
        "hypersign-auth-js-sdk": "^2.0.2",
        "jsonwebtoken": "^8.5.1",
        "lds-sdk": "^4.0.1",
        "mongoose": "^5.12.3",
        "node-fetch": "^2.6.1",
        "nodemailer": "^6.5.0",
        "qrcode": "^1.4.4",
        "sha.js": "^2.4.11",
        "simple-node-logger": "^18.12.24",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@types/chai": "^4.2.16",
        "@types/chai-http": "^4.2.0",
        "@types/express": "^4.17.6",
        "@types/mocha": "^8.2.2",
        "@types/node": "^14.0.23",
        "chai": "^4.3.4",
        "chai-http": "^4.3.0",
        "mocha": "^8.3.2",
        "nodemon": "^2.0.4",
        "ts-node": "^8.10.2",
        "typescript": "^3.4.0"
    }
}
