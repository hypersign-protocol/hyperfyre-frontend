{
    "name": "whitelisting-backend",
    "version": "v3.0.4",
    "description": "Express backend server for whitelisting portal",
    "main": "dist/index",
    "typings": "dist/index",
    "scripts": {
        "setEnv": "if [ -e .env.staging ]; then cp .env.staging .env; fi",        
        "start": "npm run build && node dist/app.js",
        "start:dev": "nodemon src/app.ts",
        "build": "rimraf ./dist && tsc -p .",
        "activateSubscription": "node dist/services/activateSubscription.js",
        "bootstrapPlan": "node dist/services/bootstrapPlans.js",
        "activateSubscription:dev": "nodemon src/services/activateSubscription.ts",
        "bootstrapPlan:dev": "nodemon src/services/bootstrapPlans.ts",
        "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'src/tests/**/*.ts'  --require src/app.ts",
        "healthCheck:dev": "nodemon src/services/healthCheck.ts",
        "healthCheck": "node dist/services/healthCheck.js"
    },
    "author": "Vishwas Anand Bhushan",
    "license": "MIT",
    "dependencies": {
        "cookie-parser": "^1.4.5",
        "cors": "^2.8.5",
        "dashify": "^2.0.0",
        "dotenv": "^8.2.0",
        "exceljs": "^4.2.1",
        "express": "^4.17.1",
        "express-validator": "^6.12.0",
        "helmet": "^4.6.0",
        "hs-ssi-sdk": "^5.0.1",
        "https-localhost": "^4.6.5",
        "hypersign-auth-js-sdk": "^2.0.7",
        "mongoose": "^5.12.3",
        "node-fetch": "^2.6.1",
        "nodemailer": "^6.5.0",
        "simple-node-logger": "^18.12.24",
        "twit": "^2.2.11",
        "url-parse": "^1.5.1",
        "uuid": "^8.3.2",
        "web3": "^1.3.6"
    },
    "devDependencies": {
        "@types/chai": "^4.2.16",
        "@types/chai-http": "^4.2.0",
        "@types/express": "^4.17.6",
        "@types/mocha": "^8.2.2",
        "@types/node": "^14.0.23",
        "chai": "^4.3.4",
        "chai-http": "^4.3.0",
        "mocha": "^8.3.2",
        "nodemon": "^2.0.4",
        "ts-node": "^8.10.2",
        "typescript": "^3.4.0",
        "rimraf": "^3.0.2"
    }
}
